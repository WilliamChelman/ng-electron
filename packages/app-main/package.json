{
  "name": "app-main",
  "version": "0.0.1",
  "main": "main.js",
  "license": "MIT",
  "scripts": {
    "start": "yarn run build && npm-run-all -p electron watch",
    "electron": "electron .",
    "build": "tsc -p ./tsconfig.json",
    "watch": "tsc -p ./tsconfig.json -w",
    "pack": "yarn run build && electron-builder --dir",
    "dist": "yarn run build && electron-builder"
  },
  "build": {
    "extraFiles": [
      {
        "from": "production.env",
        "to": ".env"
      }
    ],
    "win": {}
  },
  "dependencies": {
    "app-common": "*",
    "dotenv": "^4.0.0"
  },
  "devDependencies": {
    "@types/dotenv": "^4.0.2",
    "electron": "1.7.9",
    "electron-builder": "^19.42.2",
    "electron-reload": "^1.2.2",
    "npm-run-all": "^4.1.1",
    "typescript": "*"
  }
}
